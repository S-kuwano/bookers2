<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <% @users.each do |user| %>
      <table class='table'>
        <tr><img class="attachment user profile_image fallback"/></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>
      <% end %>
      <div class="row">
        <a class="btn btn-outline-secondarty btn-block fas fa-user-cog edit_user_250" href="/user/250/edit"></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Option</label>
        <%= f.text_area :opinion %>
      </div>
      <div class="btn btn-success">
        <%= f.submit "Create Book" %>
      </div>
    <% end%>
    </div>
  </div>
</div>

